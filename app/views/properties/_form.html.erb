<%= simple_form_for(@property) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :flat_no %>
    <%= f.input :house_name %>
    <%= f.input :house_no %>
    <%= f.input :street %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :postcode %>
    <%= f.association :property_type, :label_method => :description, include_blank: false %>
    <%= f.input :no_of_beds %>
    <%= f.input :building_materials %>
    <%= f.input :flat_roof %>
    <%= f.input :flat_roof_percentage %>
    <%= f.input :additional_info %>
    <%= f.input :original_price %>
    <%= f.label :purchase_date %>
    <%= f.date_select :purchase_date, as: :date, start_year: 2001 %>
    <%= f.input :rebuild_value %>
    <%= f.input :build_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
